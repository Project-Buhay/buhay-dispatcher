{
    "useTabs": false,
    "arrowParens": "avoid",
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all",
    "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
    "overrides": [
        { "files": "*.yml", "options": { "tabWidth": 2 } },
        { "files": "{j,t}sconfig.yml", "options": { "parser": "jsonc" } },
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte",
                "svelteAllowShorthand": true
            }
        }
    ]
}
